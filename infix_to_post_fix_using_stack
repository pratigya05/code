#include <iostream>
#include <stack>
#include <cctype> // for isalpha
using namespace std;

// Function to return precedence of operators
int precedence(char op) {
    if(op == '*' || op == '/') return 2;
    if(op == '+' || op == '-') return 1;
    return 0;
}

// Function to check if character is operator
bool isOperator(char c) {
    return (c == '+' || c == '-' || c == '*' || c == '/');
}

int main() {
    string infix;
    cout << "Enter infix expression: ";
    cin >> infix;

    stack<char> st;   // operator stack
    string postfix = "";

    cout << "\nStep-by-Step Conversion:\n";
    cout << "Symbol | Stack (top->bottom) | Postfix\n";
    cout << "-----------------------------------------\n";

    for(char ch : infix) {
        if(isalpha(ch) || isdigit(ch)) {
            // Operand â†’ append to postfix
            postfix += ch;
        }
        else if(isOperator(ch)) {
            while(!st.empty() && precedence(st.top()) >= precedence(ch)) {
                postfix += st.top();
                st.pop();
            }
            st.push(ch);
        }

        // Display current step
        cout << "   " << ch << "   | ";
        stack<char> temp = st;
        if(temp.empty()) cout << "empty";
        else {
            while(!temp.empty()) {
                cout << temp.top();
                temp.pop();
            }
        }
        cout << " | " << postfix << "\n";
    }

    // Pop remaining operators
    while(!st.empty()) {
        postfix += st.top();
        st.pop();
    }

    cout << "\nFinal Postfix Expression: " << postfix << endl;

    return 0;
}
