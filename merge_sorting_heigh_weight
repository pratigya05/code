#include<iostream>
#include<vector>
using namespace std;
struct employees{
    float height;
    float weight;
    float avg;
};
void merge(employees arr[],int start,int mid,int end){
 vector<employees> temp;
 int i=start , j = mid+1;
 while(i<=mid && j<=end){
    if(arr[i].avg<=arr[j].avg){
    temp.push_back(arr[i]);
    i++;
  }
  else{
    temp.push_back(arr[j]);
    j++;
  }
 }
 while(i<=mid){
    temp.push_back(arr[i]);
    i++;
 }
  while(j<=end){
    temp.push_back(arr[j]);
    j++;
 }
 for(int idx=0; idx<temp.size();idx++){
    arr[idx+start]=temp[idx];
 }
}
void mergesort(employees arr[],int start,int end){
    if(start<end){
        int mid = start + (end - start)/2;
        mergesort(arr,start,mid);//left
        mergesort(arr,mid+1,end);//right
        merge(arr,start,mid,end);
    }
}

int main(){
int n;
cout<<"enter number of employees: ";
cin>>n;
employees emp[n];
  cout << "\nEnter height and weight of each employee:\n";
    for (int i = 0; i < n; i++) {
        cout << "\nEmployee " << i + 1 << endl;
        cout << "Height: ";
        cin >> emp[i].height;
        cout << "Weight: ";
        cin >> emp[i].weight;

        emp[i].avg = (emp[i].height + emp[i].weight) / 2.0;
    }
mergesort(emp,0,n-1);
   cout << "\nEmployees sorted by AVERAGE of height & weight:\n";
    for (int i = 0; i < n; i++) {
        cout << "Employee " << i + 1 << " -> Height: " << emp[i].height
             << " Weight: " << emp[i].weight
             << " Avg: " << emp[i].avg << endl;
    }
        // Time Complexity Analysis
    cout << "--- Time Complexity Analysis ---\n";
    cout << "Merge Sort:\n";
    cout << "Best Case: O(n log n)\n";
    cout << "Average Case: O(n log n)\n";
    cout << "Worst Case: O(n log n)\n";
    cout << "Space Complexity: O(n) (extra space for merging)\n";
    cout << "Merge Sort is generally faster than Bubble, Selection, or Insertion Sort for large datasets.\n";

}
