#include <iostream>
using namespace std;

void display(int square[][20], int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            cout << square[i][j] << "\t";
        cout << endl;
    }
}

bool verify(int square[][20], int n) {
    int magicSum = 0;
    for (int j = 0; j < n; j++)
        magicSum += square[0][j];

    for (int i = 1; i < n; i++) {
        int sum = 0;
        for (int j = 0; j < n; j++)
            sum += square[i][j];
        if (sum != magicSum) return false;
    }

    for (int j = 0; j < n; j++) {
        int sum = 0;
        for (int i = 0; i < n; i++)
            sum += square[i][j];
        if (sum != magicSum) return false;
    }

    int d1 = 0, d2 = 0;
    for (int i = 0; i < n; i++) {
        d1 += square[i][i];
        d2 += square[i][n - i - 1];
    }
    if (d1 != magicSum || d2 != magicSum) return false;

    return true;
}

void generateOdd(int square[][20], int n) {
    int i = 0, j = n / 2;

    for (int num = 1; num <= n * n; num++) {
        square[i][j] = num;

        int newi = (i - 1 + n) % n;
        int newj = (j + 1) % n;

        if (square[newi][newj] != 0)
            i = (i + 1) % n;
        else {
            i = newi;
            j = newj;
        }
    }
}

void generateDoublyEven(int square[][20], int n) {
    int num = 1, rev = n * n;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if ((i % 4 == j % 4) || ((i + j) % 4 == 3))
                square[i][j] = rev--;
            else
                square[i][j] = num++;
        }
    }
}

int main() {
    int n, square[20][20] = {0};

    cout << "Enter order of magic square (n): ";
    cin >> n;

    if (n < 3) {
        cout << "Magic square not possible for n < 3.\n";
        return 0;
    }

    if (n % 2 == 1) {
        generateOdd(square, n);
    }
    else if (n % 4 == 0) {
        generateDoublyEven(square, n);
    }
    else {
        cout << "Singly even (6,10,14,...) not handled.\n";
        return 0;
    }

    cout << "\nMagic Square:\n";
    display(square, n);

    if (verify(square, n))
        cout << "\nMagic Square Verified Successfully!\n";
    else
        cout << "\nVerification Failed.\n";

    return 0;
}
