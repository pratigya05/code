#include <iostream>
#include <stack>
#include <cctype> // for isdigit
using namespace std;

int main() {
    string postfix;
    cout << "Enter postfix expression: ";
    cin >> postfix;

    stack<int> s;

    for(char ch : postfix) {
        if(isdigit(ch)) {
            // Operand → push to stack
            s.push(ch - '0');  // Convert char to int
        } else {
            // Operator → pop two operands
            if(s.size() < 2) {
                cout << "Invalid expression.\n";
                return 0;
            }
            int b = s.top(); s.pop();
            int a = s.top(); s.pop();
            int res;

            switch(ch) {
                case '+': res = a + b; break;
                case '-': res = a - b; break;
                case '*': res = a * b; break;
                case '/': 
                    if(b == 0) {
                        cout << "Division by zero error.\n";
                        return 0;
                    }
                    res = a / b; 
                    break;
                default:
                    cout << "Invalid operator: " << ch << endl;
                    return 0;
            }
            s.push(res); // push result back to stack
        }
    }

    if(s.size() == 1)
        cout << "Result of postfix expression: " << s.top() << endl;
    else
        cout << "Invalid postfix expression.\n";

    return 0;
}
