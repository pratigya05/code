#include <iostream>
using namespace std;

class HashTable {
public:
    int size;
    int *table;

    HashTable(int n) {
        size = n;
        table = new int[size];
        for (int i = 0; i < size; i++)
            table[i] = -1;  // -1 means empty
    }

    int hashFunction(int key) {
        return key % size;
    }

    void insertKey(int key) {
        int index = hashFunction(key);

        // If collision occurs, apply linear probing
        int start = index;
        while (table[index] != -1) {
            index = (index + 1) % size;

            // Detect full table
            if (index == start) {
                cout << "Hash table is full!\n";
                return;
            }
        }
        table[index] = key;
    }

    void searchKey(int key) {
        int index = hashFunction(key);
        int start = index;

        while (table[index] != -1) {
            if (table[index] == key) {
                cout << "Key " << key << " found at index " << index << endl;
                return;
            }
            index = (index + 1) % size;

            if (index == start) break;
        }

        cout << "Key " << key << " not found.\n";
    }

    void display() {
        cout << "\nHash Table:\n";
        for (int i = 0; i < size; i++) {
            cout << i << " --> " << table[i] << endl;
        }
    }
};

int main() {
    int n;
    cout << "Enter size of hash table: ";
    cin >> n;

    HashTable h(n);

    int choice, key;
    do {
        cout << "\n1. Insert Key\n2. Search Key\n3. Display Table\n4. Exit\nEnter choice: ";
        cin >> choice;

        switch(choice) {
        case 1:
            cout << "Enter key to insert: ";
            cin >> key;
            h.insertKey(key);
            break;

        case 2:
            cout << "Enter key to search: ";
            cin >> key;
            h.searchKey(key);
            break;

        case 3:
            h.display();
            break;

        case 4:
            cout << "Exiting...\n";
            break;

        default:
            cout << "Invalid choice!\n";
        }

    } while (choice != 4);

    return 0;
}
